<script>
    (() => {
        const words = ['Algorithm', 'Approach', 'Blueprint', 'Design Pattern', 'Exercise', 'Framework', 'Guideline', 'Instruction', 'Procedure', 'Process', 'Protocol', 'Recipe', 'Strategy', 'System', 'Tactic', 'Technique', 'Tool', 'Workflow'];
        const el = document.getElementById("typewriter");
        let i = 0, j = 0;
        let deleting = false;

        const type = () => {
            const word = words[i];

            if (deleting) {
                j--;
                el.textContent = word.substring(0, j);
                if (j === 0) {
                    deleting = false;
                    i = (i + 1) % words.length;
                }
            } else {
                j++;
                el.textContent = word.substring(0, j);
                if (j === word.length) {
                    // Word is fully typed (with the last letter visible)—pause for 2 seconds, then start deletion.
                    return setTimeout(() => {
                        deleting = true;
                        type();
                    }, 2500);
                }
            }

            setTimeout(type, 80);
        };

        type();
    })();
</script>
