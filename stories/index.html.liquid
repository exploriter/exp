                    </svg>
                    {%- endif -%}
                </span>
            </li>
        {%- endfor -%}
    </ol>
</div>

<script>
    (() => {
        const words = ['Allegory', 'Anecdote', 'Biography', 'Case Study', 'Chronicle', 'Experience', 'Fable', 'Folktale', 'Frame', 'History', 'Insight', 'Intuition', 'Legend', 'Metaphor', 'Myth', 'Narrative', 'Observation', 'Parable', 'Perspective', 'Testimony', 'Thought Experiment', 'Worldview'];
        const el = document.getElementById("typewriter");
        let i = 0, j = 0;
        let deleting = false;

        const type = () => {
            const word = words[i];

            if (deleting) {
                j--;
                el.textContent = word.substring(0, j);
                if (j === 0) {
                    deleting = false;
                    i = (i + 1) % words.length;
                }
            } else {
                j++;
                el.textContent = word.substring(0, j);
                if (j === word.length) {
                    // Word is fully typed (with the last letter visible)—pause for 2 seconds, then start deletion.
                    return setTimeout(() => {
                        deleting = true;
                        type();
                    }, 2500);
                }
            }

            setTimeout(type, 80);
        };

        type();
    })();
</script>